{
  "name": "ftcmetrics",
  "version": "0.1.0",
  "description": "Official TypeScript SDK for the FTCMetrics API and FTC Events API",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test src/__tests__/client.test.ts",
    "test:integration": "bun test src/__tests__/integration/"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/pg": "^8.15.4",
    "pg": "^8.16.0",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "ftc",
    "first-tech-challenge",
    "robotics",
    "scouting",
    "analytics"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ftcmetrics/ftcmetrics",
    "directory": "sdks/typescript"
  }
}
